<div class="add-container">
    <h2>School Admission Form</h2>
    <form action="http://localhost:8080/updateAddmission.htm" onsubmit="return validateAddmisions()" method="POST">
      <label for="name">Full Name:</label>
      <input type="text" id="name" name="name" value="<%=addmissionRecord.name %> ">
      
      <label for="age">Age:</label>
      <input type="number" id="age" name="age" value="<%=addmissionRecord.age %>" >
      
      <label for="grade">Grade:</label>
      <select id="grade" name="grade" required value="<%=addmissionRecord.grade %>" >
        <option value="">Select Grade</option>
        <option value="1">Grade 1</option>
        <option value="2">Grade 2</option>
        <option value="3">Grade 3</option>
        <option value="3">Grade 4</option>
        <option value="3">Grade 5</option>
        <option value="3">Grade 6</option>
        <!-- Add more grade options as needed -->
      </select>
      
      <label for="parents">Parents' Names:</label>
      <input type="text" id="parents" name="parents" value="<%=addmissionRecord.parents %>" >
      
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<%=addmissionRecord.email %>" >

      <label for="nationality">Nationality</label>
      <input type="text" id="nationality" class="nationality" value="<%=addmissionRecord.nationality %>" >

      <label for="pob">Place of Birth:</label>
      <input type="text" id="place" name="place" value="<%=addmissionRecord.place %>" >

      <label for="birth">Date of Birth:</label>
      <input type="date" id="dateBirth" class="dateBirth" value="<%=addmissionRecord.dateBirth %>">

      <label for="religion">Religion</label>
<input type="text" id="religion" class="religion" value="<%=addmissionRecord.religion %>">

      <input type="submit" value="Submit">
